class Solution { 

    //return -1 if u need camera
    //return 0 if u r camera
    //return 1 if u r covered by child

    static int cameras;

    public int minCameraCover(TreeNode root) {
        cameras=0;

        if(traverse(root)==-1) cameras++;

        return cameras;
        
    }
    public int traverse(TreeNode root){
        if(root==null) return 1;

        int lchild=traverse(root.left);
        int rchild=traverse(root.right);

        if(lchild==-1||rchild==-1){
            cameras++;
            return 0;
        }

        if(lchild==0 || rchild==0) return 1;

        return -1;

    }
}
