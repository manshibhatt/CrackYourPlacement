class Solution {
    public int minCost(String colors, int[] neededTime) { 
        
        int ans=0;

        int cur=neededTime[0];
        int sum=neededTime[0];
        boolean flag=false;

        for(int i=1;i<colors.length();i++){ 
           if(colors.charAt(i)==colors.charAt(i-1)){
                   cur=Math.max(neededTime[i],cur);
                   sum+=neededTime[i];
                   flag=true;
           }
            else{
                if(flag) {
                    ans=ans+sum-cur;
                } 
                 cur=neededTime[i];
                 sum=neededTime[i];
                 flag=false;
            }
         System.out.println(ans);
        }

         System.out.println(sum+" "+cur);

        if(flag) ans=ans+sum-cur;
        return ans;

    }
}
