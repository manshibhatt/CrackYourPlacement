class Solution {
    public void sortColors(int[] nums) {
        int l=0,m=0,hi=nums.length-1;
        while(m<=hi){
            if(nums[m]<1){
                swap(nums,l,m);
                l++;
                m++;
            }
            else if(nums[m]>1){
                swap(nums,m,hi);
                hi--;
            }else m++;
        }

    }
    public void swap(int[] nums,int i,int j){
        int t=nums[i];
        nums[i]=nums[j];
        nums[j]=t;
    }
}
