class Solution {
    public int minMoves2(int[] nums) {
        
        Arrays.sort(nums);

        int n=nums.length;

        int m=0;

        if(n%2==0){
             m=(nums[n/2]+nums[(n+1)/2])/2;
        }
        else m=nums[n/2];

       int ans=0;

       for(int v:nums) ans+=Math.abs(m-v) ;

       return ans;

    }
}
